<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" 
	updateCheck="true"
	monitoring="autodetect" 
	dynamicConfig="true">
 
	<diskStore path="java.io.tmpdir" />
 
	<cache name="aclCache" 
		maxEntriesLocalHeap="1000"
		maxEntriesLocalDisk="10000" 
		eternal="false" 
		diskSpoolBufferSizeMB="10"
		timeToIdleSeconds="300" timeToLiveSeconds="600"
		memoryStoreEvictionPolicy="LFU" 
		transactionalMode="off">
		<persistence strategy="localTempSwap" />
	</cache>
	
	<cache name="campeonatos" 
        maxEntriesLocalHeap="10"
        maxEntriesLocalDisk="20" 
        eternal="false" 
        diskSpoolBufferSizeMB="2"
        timeToIdleSeconds="300" timeToLiveSeconds="600"
        memoryStoreEvictionPolicy="LFU" 
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>
    
    <cache name="campeonatosAtivos" 
        maxEntriesLocalHeap="10"
        maxEntriesLocalDisk="20" 
        eternal="false" 
        diskSpoolBufferSizeMB="2"
        timeToIdleSeconds="300" timeToLiveSeconds="600"
        memoryStoreEvictionPolicy="LFU" 
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>
    
    <cache name="tabelaCampeonato" 
        maxEntriesLocalHeap="1000"
        maxEntriesLocalDisk="10000" 
        eternal="false" 
        diskSpoolBufferSizeMB="10"
        timeToIdleSeconds="300" timeToLiveSeconds="600"
        memoryStoreEvictionPolicy="LFU" 
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>
    
    <cache name="rankingApostadores" 
        maxEntriesLocalHeap="10"
        maxEntriesLocalDisk="50" 
        eternal="false" 
        diskSpoolBufferSizeMB="10"
        timeToIdleSeconds="300" timeToLiveSeconds="600"
        memoryStoreEvictionPolicy="LFU" 
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>
    
    <cache name="partidasRodada" 
        maxEntriesLocalHeap="1000"
        maxEntriesLocalDisk="10000" 
        eternal="false" 
        diskSpoolBufferSizeMB="10"
        timeToIdleSeconds="300" timeToLiveSeconds="600"
        memoryStoreEvictionPolicy="LFU" 
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>
    
    <cache name="desempenhoApostador" 
        maxEntriesLocalHeap="1000"
        maxEntriesLocalDisk="10000" 
        eternal="false" 
        diskSpoolBufferSizeMB="10"
        timeToIdleSeconds="300" timeToLiveSeconds="600"
        memoryStoreEvictionPolicy="LFU" 
        transactionalMode="off">
        <persistence strategy="localTempSwap" />
    </cache>
 
</ehcache>